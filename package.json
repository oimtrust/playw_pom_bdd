{
  "name": "playw_pom_bdd",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.3.3",
    "dotenv": "^17.2.1",
    "playwright-bdd": "^8.4.0",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "test": "PW_OPTIONS='--reporter=list' npx playwright-bdd test",
    "test:headed": "PW_OPTIONS='--headed --reporter=list' npx playwright-bdd test",
    "test:ui": "npx playwright-bdd test && npx playwright test --ui",
    "test:debug": "PW_OPTIONS='--debug' npx playwright-bdd test",
    "test:report": "allure generate allure-results --clean && allure open",
    "test:clean": "rimraf allure-results allure-report test-results",
    "install:browsers": "playwright install"
  }
}
